@model ContatoModel
@{
    ViewData["Title"] = "Confirmação Apagar Contato";
}

<div class="text-center">

    <h3>Deseja realmente apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-danger btn-block" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Excluir</a>
<a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>
